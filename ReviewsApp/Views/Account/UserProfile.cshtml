@model UserProfileViewModel
<head>
    <title>@AppConfigs.Title - @Model.DisplayName's Profile</title>
    <script src="~/lib/jquery/jquery.min.js" type="text/javascript"></script>
</head>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <button class="navbar-toggler"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#navbarColor03"
                aria-controls="navbarColor03"
                aria-expanded="false"
                aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarColor03">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="nav-link fs-6"
                       asp-controller="Review"
                       asp-action="CreateReview"
                       asp-route-userName="@Model.UserName">
                        New Review <i class="fas fa-plus"></i>
                    </a>
                </li>
            </ul>
        </div>
    </div>
</nav>

@if (!Model.Reviews.Any())
{
    <div class="alert alert-warning m-3">
        Reviews Not Found
    </div>
}
else
{
    <div class="m-3">
        @foreach (var review in Model.Reviews)
        {
            <div class="row">
                <div class="col-10">
                    @{
                        await Html.RenderPartialAsync("ReviewPartials/_Preview", review);
                    }
                </div>
                <div class="col-2">
                    <a type="submit"
               class="btn btn-sm btn-outline-primary me-1"
               asp-controller="Review"
               asp-action="Details"
               asp-route-id="@review.Id">
                        <i class="fas fa-eye"></i>
                    </a>
                    <a type="submit"
               class="btn btn-sm btn-outline-warning me-1"
               asp-controller="Review"
               asp-action="Edit"
               asp-route-id="@review.Id">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a class="btn btn-sm btn-outline-danger me-1"
               asp-controller="Review"
               asp-action="Delete"
               asp-route-id="@review.Id">
                        <i class="fas fa-trash-alt"></i>
                    </a>
                </div>
            </div>
        }
    </div>
    await Html.RenderPartialAsync("ReviewPartials/_Pagination", Model.Pagination);
}