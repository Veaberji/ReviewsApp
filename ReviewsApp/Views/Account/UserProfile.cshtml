@model UserProfileViewModel
<head>
    <title>@AppConfigs.Title - @Model.DisplayName's Profile</title>
    <script src="~/lib/jquery/jquery.min.js" type="text/javascript"></script>
</head>

<div class="m-3">
    @foreach (var review in Model.Reviews)
    {
        <div class="row">
            <div class="col-10">
                @{
                    await Html.RenderPartialAsync("ReviewPartials/_Preview", review);
                }
            </div>
            <div class="col-2">
                <a type="submit"
               class="btn btn-sm btn-outline-primary me-2"
               asp-controller="Review"
               asp-action="Details"
               asp-route-id="@review.Id">
                    <i class="fas fa-eye"></i>
                </a>
                <a type="submit"
               class="btn btn-sm btn-outline-warning me-2"
               asp-controller="Review"
               asp-action="Edit"
               asp-route-id="@review.Id">
                    <i class="fas fa-edit"></i>
                </a>
                <a class="btn btn-sm btn-outline-danger me-2"
               asp-controller="Review"
               asp-action="Delete"
               asp-route-id="@review.Id">
                    <i class="fas fa-trash-alt"></i>
                </a>
            </div>
        </div>
    }
</div>
@{
    await Html.RenderPartialAsync("ReviewPartials/_Pagination", Model.Pagination);
}