@model ReviewsApp.ViewModels.RegisterViewModel

<div class="card-header fs-3">Create User</div>
<div class="card-body">
    <div asp-validation-summary="All" class="alert-danger"></div>
    <form asp-action="Register" method="post">
        <div class="mb-3">
            <label class="form-label" asp-for="Login"></label>
            <input class="form-control" asp-for="Login" />
        </div>
        <div class="mb-3">
            <label class="form-label" asp-for="Email"></label>
            <input class="form-control" asp-for="Email" />
        </div>
        <div class="mb-3">
            <label class="form-label" asp-for="Password"></label>
            <input class="form-control" asp-for="Password" />
        </div>
        <div class="mb-3">
            <label class="form-label" asp-for="ConfirmPassword"></label>
            <input class="form-control" asp-for="ConfirmPassword" />
        </div>
        <button type="submit" class="btn btn-primary">
            Register now
        </button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>