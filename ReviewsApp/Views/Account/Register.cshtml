@model RegisterViewModel
@inject IViewLocalizer _localizer

<head>
    <title>@AppConfigs.Title - @_localizer["Register now"]</title>
</head>

<div class="card-header fs-3">@_localizer["Register now"]</div>
@{
    await Html.RenderPartialAsync("_SocialLogins");
}
<div class="card-body col-4 align-self-center pt-0">
    <div asp-validation-summary="ModelOnly" class="alert-danger"></div>
    <form asp-action="Register" method="post">
        <div class="mb-3">
            <label class="form-label" asp-for="Login"></label>
            <input class="form-control" asp-for="Login" />
            <span asp-validation-for="Login" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label" asp-for="DisplayName"></label>
            <input class="form-control" asp-for="DisplayName" />
            <span asp-validation-for="DisplayName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label" asp-for="Email"></label>
            <input class="form-control" asp-for="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label" asp-for="Password"></label>
            <input class="form-control" asp-for="Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label" asp-for="ConfirmPassword"></label>
            <input class="form-control" asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">
            @_localizer["Register now"]
        </button>
        @{
            await Html.RenderPartialAsync("ReviewPartials/_CancelButton");
        }
    </form>
</div>

@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}