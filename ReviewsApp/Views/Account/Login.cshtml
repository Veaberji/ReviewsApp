@model ReviewsApp.ViewModels.LoginViewModel

<head>
    <title>@AppConfigs.Title - Log In</title>
</head>

<div class="card-header fs-3">Log In</div>
<div class="card-body">
    <div asp-validation-summary="All" class="alert-danger"></div>

    <form asp-action="Login" method="post">
        <div class="mb-3">
            <label class="form-label" asp-for="Login"></label>
            <input class="form-control" asp-for="Login" />
        </div>
        <div class="mb-3">
            <label class="form-label" asp-for="Password"></label>
            <input class="form-control" asp-for="Password" />
        </div>
        <button type="submit" class="btn btn-primary">
            Log In
        </button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

<div class="card-body">
    <a class="btn btn-info" asp-action="FacebookLogin">Log in With FaceBook</a>
    <a class="btn btn-success" asp-action="GoogleLogin">Log in With Google</a>
</div>
@if (TempData["message"] != null)
{
    <div class="card-footer alert-info">@TempData["message"]</div>
}