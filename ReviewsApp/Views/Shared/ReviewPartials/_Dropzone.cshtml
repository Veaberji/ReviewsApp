<script language="javascript">
    Dropzone.options.imagesDropzone = {
    init: function() {
            this.on("successmultiple", function(file, responseText) {
                let images = $('#ImagesUrls').val();
                let result = images.length > 0 ?
                    images + "," + responseText : responseText;
                $('#ImagesUrls').val(result);
            });

            let imagesDropzone = this;
            $('#clear-dropzone')
                .on("click", function () {
                    imagesDropzone.removeAllFiles();
                    deleteUploadedFiles();
                });
        },
        accept(file, done) {
            return done();
        },
        acceptedFiles: "image/*",
        autoDiscover: false,
        uploadMultiple: true,
        parallelUploads: @AppConfigs.ImagesToUploadInParallel,
        maxFiles: @AppConfigs.MaxImages,
        maxFilesize: @AppConfigs.MaxImageSizeInMegaBytes
    };

    $('#confirm-cancel')
        .on("click", function () {
            deleteUploadedFiles();
        });

    function deleteUploadedFiles() {
        if ($('#ImagesUrls').val()) {
            $.ajax({
                url: '/Image/DeleteImages',
                headers: { "RequestVerificationToken":
                    $('input[name="__RequestVerificationToken"]').val() },
                data: { "urls": $('#ImagesUrls').val() },
                type: "POST",
                success: function () {
                    $('#ImagesUrls').val("");
                },
                error: function (errorResponse) {
                    console.log(errorResponse.responseText);
                },
                failure: function (failureResponse) {
                    console.log(failureResponse.responseText);
                }
            });
        }
    }
</script>