@model PreviewViewModel
@inject IViewLocalizer _localizer

<h6 class="text-warning">
    @Model.ProductViewModel.Type :
    @Model.ProductViewModel.Name
    <br />
    @_localizer["Author"]:
    @{
        await Html.RenderPartialAsync("ReviewPartials/_Author", Model.Author);
    }
    | @_localizer["Author's rating"]: @Model.AuthorGrade
</h6>

@{
    await Html.RenderPartialAsync("ReviewPartials/_AverageUserRating", Model);
}