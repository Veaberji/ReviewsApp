@inject IHttpContextAccessor _httpContextAccessor

<meta name="viewport" content="width=device-width" />
@{
    await Html.RenderPartialAsync("_Favicons");
}

@{
    var theme = _httpContextAccessor.HttpContext.Request.Cookies[AppConfigs.ThemeCookie];
    if (theme == Themes.Dark.ToString())
    {
        <link rel="stylesheet" href="~/css/Themes/CyborgBootstrap.min.css" />
    }
    else
    {
        <link rel="stylesheet" href="~/css/Themes/LumenBootstrap.min.css" />
    }
}

<link rel="stylesheet" href="~/css/site.min.css" />
<script src="https://kit.fontawesome.com/f704188f17.js" crossorigin="anonymous"></script>