@model SettingsViewModel

<head>
    <title>@AppConfigs.Title - Settings</title>
</head>

<div class="card-body">
    <div asp-validation-summary="All" class="alert-danger"></div>
    <form asp-action="SetSettings" method="post">
        <div class="mb-3">
            <label class="form-label" asp-for="Theme">Select Theme</label>
            <select class="form-control" asp-for="Theme">
                <option value="@Themes.Light">@Themes.Light.ToString()</option>
                <option value="@Themes.Dark">@Themes.Dark.ToString()</option>
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>