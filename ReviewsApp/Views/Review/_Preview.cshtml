@model PreviewViewModel

<div class="card mb-3 ms-2">
    <div class="row g-0">
        <div class="col-md-4">
            @{
                await Html.RenderPartialAsync("_PreviewImage", Model.PreviewImageUrl);
            }
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h4 class="card-title">
                    <a asp-action="SingleReview"
                       asp-route-id="@Model.Id">
                        @Model.Title
                    </a>
                </h4>
                @{
                    await Html.RenderPartialAsync("_ReviewHeader", Model);
                }
                <p class="card-text text-start">
                    @Model.Body
                </p>
                @{
                    await Html.RenderPartialAsync("_Tags", Model.Tags);
                }

                <p class="card-text">
                    <small class="text-muted">
                        Added: @Model.DateAdded.ToLocalTime()
                    </small>
                </p>
            </div>
        </div>
    </div>
</div>