@model HomePageViewModel

<head>
    <title>@AppConfigs.Title - Home</title>
</head>

<div class="alert alert-warning">
    !!!IT HAS TO BE DELETED!!!
    There are 10 last reviews with authors bellow
</div>

<div class="position-relative row">
    <div class="col-10">
        @foreach (var review in Model.Reviews)
        {
            await Html.RenderPartialAsync("_Preview", review);
        }
    </div>
    <div class="col-2">
        @foreach (var tag in Model.Tags)
        {
            <span class="@tag.CssClass">@tag.Text</span>
        }
    </div>
</div>