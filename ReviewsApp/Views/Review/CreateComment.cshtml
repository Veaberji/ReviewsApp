@model CreateCommentViewModel

<div class="card-body align-self-start pt-0">
    <div asp-validation-summary="All" class="alert-danger"></div>
    <form asp-action="CreateComment" method="post">
        <div class="mb-3">
            <textarea class="form-control comment-textarea"
                      asp-for="Body"
                      placeholder="Write a Comment"></textarea>
        </div>
        <input asp-for="AuthorName" hidden />
        <input asp-for="ReviewId" hidden />
        <div>
            <button type="submit" class="btn btn-primary me-3">
                Add
            </button>
            <button type="reset" class="btn btn-secondary text-end">Cancel</button>
        </div>
    </form>
</div>

<script type="text/javascript">
    $( document ).ready(function() {
        let userName = $("#current-user-name").val();
        let reviewId = $("#single-review-id").val();
        $("#AuthorName").val(userName);
        $("#ReviewId").val(reviewId);
    });
</script>