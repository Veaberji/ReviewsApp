@model PreviewViewModel

<div class="card mb-3">
    <div class="row g-0">
        <div class="col-md-4">
            @{
                await Html.RenderPartialAsync("LastReviewsPartials/_PreviewImage", Model.PreviewImageUrl);
            }
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h4 class="card-title">
                    <a asp-action="SingleReview"
                       asp-route-id="@Model.Id">
                        @Model.Title
                    </a>
                </h4>
                @{
                    await Html.RenderPartialAsync("SharedPartials/_ReviewHeader", Model);
                }
                <div class="card-text text-start">
                    @{
                        await Html.RenderPartialAsync("SharedPartials/_MarkdownBody", Model.Body);
                    }
                </div>
                @{
                    await Html.RenderPartialAsync("SharedPartials/_Tags", Model.Tags);
                }
                <p class="card-text">
                    <small class="text-muted">
                        Added: @Model.DateAdded.ToLocalTime()
                    </small>
                </p>
            </div>
        </div>
    </div>
</div>