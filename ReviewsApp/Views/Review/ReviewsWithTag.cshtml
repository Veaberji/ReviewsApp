@model HomePageViewModel

<head>
    <title>@AppConfigs.Title - Results Page @Model.Pagination.PageIndex</title>
</head>

@if (!Model.Reviews.Any())
{
    <div class="alert alert-warning m-3">
        Reviews Not Found
    </div>
}
else
{
    <div class="position-relative row m-3">
        <div class="col-12">
            @foreach (var review in Model.Reviews)
            {
                await Html.RenderPartialAsync("_Preview", review);
            }
        </div>
    </div>
    await Html.RenderPartialAsync("_Pagination", Model.Pagination);
}