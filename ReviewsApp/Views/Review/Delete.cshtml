@model PreviewViewModel
<head>
    <title>@AppConfigs.Title - @Model.Title Edit</title>
</head>

<h4 class="card-header">Are you sure you want to delete this review?</h4>
<div class="m-3">
    @{
        await Html.RenderPartialAsync("ReviewPartials/_Preview", Model);
    }
</div>
<div class="m-3 align-middle">
    <form asp-action="DeleteConfirmed"
          asp-route-id="@Model.Id" method="post"
          class="mb-1">
        <button type="submit" class="btn btn-danger">
            Delete
        </button>
    </form>
    @{
        await Html.RenderPartialAsync("ReviewPartials/_BackToProfileButton");
    }
</div>
